<manifest package="co.edu.unal.sqlite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Activity para crear/editar empresas -->
        <activity
            android:name=".ui.AddEditCompanyActivity"
            android:exported="false" /> <!-- no tiene intent-filter, asÃ­ que va false -->

        <!-- Activity principal con intent-filter (launcher) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"> <!-- debe ser true -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
